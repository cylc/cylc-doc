set -eux
TEMPORARYDIRECTORY=$(mktemp -dp "$HOME"/cylc-run/) 
cp -r ./* "$TEMPORARYDIRECTORY"
APIKEY=$(head --lines 1 ../api-keys)
cd "$TEMPORARYDIRECTORY"
sed -i '1s;^;[cylc]\n    abort if any task fails = True\n;' suite.rc
sed -i "s/DATAPOINT_API_KEY/$APIKEY/" suite.rc
cylc validate --strict . --icp=2000
cylc run --no-detach 
rm -r "$TEMPORARYDIRECTORY"
