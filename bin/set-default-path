set -eu

# cd into the root build dir (the one which contains the different versions)
cd "$1/.."

CYLC_VERSION="$2"
DEFAULT_FORMAT="$3"
LATEST="${4:-}"


html_redirect () {
    SRC="$1"   # relative path from $DEST
    DEST="$2"  # location to write redirect to

    cat >"$DEST" << __HTML__
<!DOCTYPE html>
<html>
    <head>
        <title>Cylc Documentation</title>
        <meta http-equiv="REFRESH" content="0;url=$SRC">
    </head>
    <body>
        <p>If not automatically redirected, please click
        <a href="$SRC">Cylc Documentation</a>.</p>
    </body>
</html>
__HTML__
}


main () {
    # link to the default format in the freshly built documentation
    html_redirect "${DEFAULT_FORMAT}/index.html" "${CYLC_VERSION}/index.html"

    if [[ -n $LATEST ]]; then
        # make the specified version of the documentation the default
        rm "${LATEST}" || true
        ln -s "${CYLC_VERSION}" "${LATEST}"
        html_redirect "${LATEST}/index.html" "index.html"
    fi
}


main
